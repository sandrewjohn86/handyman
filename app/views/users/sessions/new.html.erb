<header>
  <div class="row">
    <!-- <img src="img/signin-hero.png"/> -->
    <%= image_tag("signin-hero.png", alt: "The carenage") %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"} ) do |f| %>
      <h2 class="form-signin-heading">Pro sign-in</h2>

        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control" %>

        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control" %>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>

    <%= render "users/shared/links" %>
    <% end %>  
  </div>
</header>
