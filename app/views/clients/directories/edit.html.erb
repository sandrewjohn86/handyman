<h1>Directories#edit</h1>
<p>Find me in app/views/directories/edit.html.erb</p>

<h2>Edit Directory</h2>

<%= form_for @directory, url: clients_directories_path do |f| %>
	<!-- Check for errors -->
	<% if @directory.errors.any? %>
		<% @directory.errors.full_messages.each do |msg| %>
			<!-- Show errors -->
			<div><%= msg %></div>
		<% end %>
	<% end %>

	<div>
		<%= f.label "Directory Title" %>
		<%= f.text_field :directory_title, autofocus: true %>
	</div>

	<div>
		<%= f.label "Description" %>
		<%= f.text_area :directory_desc, autofocus: true %>
	</div>

	<br>
	<%= f.submit "Submit"%>
	<%=link_to "Cancel", root_path %>
<% end %>
